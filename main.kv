<MyLayout>:
    
    textinput: textinput
    percent: percent
    c: c
    c: ce
    divide: divide
    seven: seven
    eight: eight
    nine: nine
    multiply: multiply
    four: four
    five: five
    six: six
    subtract: subtract
    one: one
    two: two
    three: three
    add: add
    addsub: addsub
    zero: zero
    decimal: decimal
    equals: equals

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: textinput
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, .15)

        GridLayout:
            cols: 4
            rows: 5

            Button:
                id: percent
                size_hint: (.2, .2)
                font_size: 32
                text: "%"
            Button:
                id: c
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                on_press: root.delete()
            Button:
                id: ce
                size_hint: (.2, .2)
                font_size: 32
                text: "CE"
                on_press: root.clear()
            Button:
                id: divide
                size_hint: (.2, .2)
                font_size: 32
                text: "/"
                on_press: root.dividenums()
            Button:
                id: seven
                size_hint: (.2, .2)
                font_size: 32
                text: "7"
                on_press: root.numseven()
            Button:
                id: eight
                size_hint: (.2, .2)
                font_size: 32
                text: "8"
                on_press: root.numeight()
            Button:
                id: nine
                size_hint: (.2, .2)
                font_size: 32
                text: "9"
                on_press: root.numnine()
            Button:
                id: multiply
                size_hint: (.2, .2)
                font_size: 32
                text: "x"
                on_press: root.multiplynums()
            Button:
                id: four
                size_hint: (.2, .2)
                font_size: 32
                text: "4"
                on_press: root.numfour()
            Button:
                id: five
                size_hint: (.2, .2)
                font_size: 32
                text: "5"
                on_press: root.numfive()
            Button:
                id: six
                size_hint: (.2, .2)
                font_size: 32
                text: "6"
                on_press: root.numsix()
            Button:
                id: subtract
                size_hint: (.2, .2)
                font_size: 32
                text: "-"
                on_press: root.subnums() 
            Button:
                id: one
                size_hint: (.2, .2)
                font_size: 32
                text: "1"
                on_press: root.numone()
            Button:
                id: two
                size_hint: (.2, .2)
                font_size: 32
                text: "2"
                on_press: root.numtwo()
            Button:
                id: three
                size_hint: (.2, .2)
                font_size: 32
                text: "3"
                on_press: root.numthree()
            Button:
                id: add
                size_hint: (.2, .2)
                font_size: 32
                text: "+"
                on_press: root.addnums()
            Button:
                id: addsub
                size_hint: (.2, .2)
                font_size: 32
                text: "+/-"
            Button:
                id: zero
                size_hint: (.2, .2)
                font_size: 32
                text: "0"
                on_press: root.numzero()
            Button:
                id: decimal
                size_hint: (.2, .2)
                font_size: 32
                text: "."
                on_press: root.adddec()
            Button:
                id: equals
                size_hint: (.2, .2)
                font_size: 32
                text: "="
                on_press: root.answer()